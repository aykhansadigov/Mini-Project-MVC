@using MVC_Mini_Project.Models
@model Product
@{
    ViewData["Title"] = "Create Product";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Yeni Məhsul Yarat</h4>

        <form method="post" enctype="multipart/form-data" class="forms-sample">

            <div class="form-group">
                <label asp-for="Name">Məhsulun Adı</label>
                <input asp-for="Name" class="form-control" style="color:white" placeholder="Məhsulun adı...">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price">Qiymət</label>
                <input asp-for="Price" type="number" step="0.01" class="form-control" style="color:white" placeholder="Qiymət...">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description">Təsvir</label>
                <textarea asp-for="Description" class="form-control" style="color:white" rows="4"></textarea>
            </div>

            <div class="form-group">
                <label>Kateqoriya Seçin</label>
                <select asp-for="CategoryId" class="form-control" style="color:white"
                        asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Photo">Şəkil Seçin</label>
                <input asp-for="Photo" class="form-control" style="color:white">
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary mr-2">Yarat</button>
            <a asp-action="Index" class="btn btn-light">Ləğv et</a>
        </form>
    </div>
</div>