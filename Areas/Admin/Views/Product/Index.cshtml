@using MVC_Mini_Project.Models
@model List<Product>
@{
    ViewData["Title"] = "Məhsullar";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Məhsullar</h4>

        <a asp-action="Create" class="btn btn-success mb-3">+ Yeni Məhsul</a>

        <div class="table-responsive">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th> ID </th>
                        <th> Şəkil </th>
                        <th> Ad </th>
                        <th> Qiymət </th>
                        <th> Kateqoriya </th>
                        <th> Əməliyyatlar </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td> @item.Id </td>
                            <td>
                                @if (item.ImageUrl != null)
                                {
                                    <img src="~/img/@item.ImageUrl" style="width:70px; height:70px; object-fit:cover; border-radius:0;" />
                                }
                                else
                                {
                                    <span>Şəkil yoxdur</span>
                                }
                            </td>
                            <td> @item.Name </td>
                            <td> @item.Price ₼ </td>
                            <td> @item.Category.Name </td>
                            <td>
                                <a class="btn btn-warning btn-sm">Edit</a>
                                <a class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>