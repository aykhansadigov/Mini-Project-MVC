@model MVC_Mini_Project.ViewModels.DetailVM

@{
    ViewData["Title"] = "Product Details";
}

<div class="container-fluid pb-5">
    <div class="row px-xl-5">

        <div class="col-lg-5 mb-30">
            <div id="product-carousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner bg-light">
                    <div class="carousel-item active">
                        @if (Model.Product.ImageUrl != null)
                        {
                            <img class="w-100 h-100" src="~/img/@Model.Product.ImageUrl" alt="Image" style="object-fit: cover;">
                        }
                        else
                        {
                            <img class="w-100 h-100" src="~/img/no-image.jpg" alt="Image">
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-7 h-auto mb-30">
            <div class="h-100 bg-light p-30">
                <h3>@Model.Product.Name</h3>
                <h3 class="font-weight-semi-bold mb-4">@Model.Product.Price ₼</h3>
                <p class="mb-4">@Model.Product.Description</p>

                <div class="d-flex align-items-center mb-4 pt-2">
                    <button class="btn btn-primary px-3"><i class="fa fa-shopping-cart mr-1"></i> Səbətə at</button>
                </div>
                <div class="d-flex pt-2">
                    <strong class="text-dark mr-2">Kateqoriya:</strong>
                    <p class="text-muted">@(Model.Product.Category != null ? Model.Product.Category.Name : "Yoxdur")</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid py-5">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Oxşar Məhsullar</span></h2>
    <div class="row px-xl-5">

        @foreach (var item in Model.RelatedProducts)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                <div class="product-item bg-light mb-4">
                    <div class="product-img position-relative overflow-hidden">
                        @if (item.ImageUrl != null)
                        {
                            <img class="img-fluid w-100" src="~/img/@item.ImageUrl" alt="" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <img class="img-fluid w-100" src="~/img/no-image.jpg" alt="" style="height: 200px; object-fit: cover;">
                        }
                        <div class="product-action">
                            <a class="btn btn-outline-dark btn-square" asp-controller="Home" asp-action="Detail" asp-route-id="@item.Id"><i class="fa fa-search"></i></a>
                        </div>
                    </div>
                    <div class="text-center py-4">
                        <a class="h6 text-decoration-none text-truncate" asp-controller="Home" asp-action="Detail" asp-route-id="@item.Id">@item.Name</a>
                        <div class="d-flex align-items-center justify-content-center mt-2">
                            <h5>@item.Price ₼</h5>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>